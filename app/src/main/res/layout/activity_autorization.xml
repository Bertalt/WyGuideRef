<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/abc_action_button_min_width_overflow_material"
        android:paddingRight="@dimen/abc_action_button_min_width_overflow_material">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcomView"
        android:id="@+id/welcomeView"
        android:textColor="#64B5F6"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:textSize="@android:dimen/app_icon_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
           >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autorButtonFb"
        android:layout_weight="1"
        android:src="@drawable/ic_facebook_box"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autorButtonVk"
        android:layout_weight="1"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:src="@drawable/ic_vk_circle" />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/autorButtonGhost"
           android:layout_weight="1"
           android:src="@drawable/ic_arrow_right_bold_circle"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
